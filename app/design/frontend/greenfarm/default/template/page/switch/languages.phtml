<?php if(count($this->getStores())>1): ?>
    <div class="language-flags">
        <!--    <label for="select-language">--><?php //echo $this->__('Your Language:') ?><!--</label>-->
        <div id="select-language" title="<?php echo $this->__('Your Language') ?>">
            <?php foreach ($this->getStores() as $_lang): ?>
                <?php $_selected = ($_lang->getId() == $this->getCurrentStoreId()) ? true : false ?>
                <?php
                    if($_selected){
                ?>
                    <span  title="<?php echo $this->escapeHtml($_lang->getName()) ?>" >
                        <img align="" src="<?php echo $this->getSkinUrl('images/flags/'.$_lang->getCode().'.svg') ?>">
                    </span>
                <?php
                    } else {
                ?>
                    <a href="<?php echo $_lang->getCurrentUrl() ?>" title="<?php echo $this->escapeHtml($_lang->getName()) ?>">
                        <img align="" src="<?php echo $this->getSkinUrl('images/flags/'.$_lang->getCode().'.svg') ?>">
                    </a>
                <?php
                    }
                ?>
            <?php endforeach; ?>
        </div>
    </div>
<?php endif; ?>
